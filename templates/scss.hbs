@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}

$webfont-icons: () !default;
$webfont-icons: map-merge($webfont-icons, (
	{{#each codepoints}}
		'{{@key}}': ('{{../fontName}}' '\\{{this}}'),
	{{/each}}
));

@mixin webfont-icon($name) {
	line-height: 1;

	$icon: map-get($webfont-icons, $name);
	&:before {
		font-family: nth($icon, 1) !important;
		font-style: normal;
		font-weight: normal !important;
		vertical-align: top;
		content: nth($icon, 2);
	}
}
